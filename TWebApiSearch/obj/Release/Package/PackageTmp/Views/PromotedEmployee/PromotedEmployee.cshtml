
@{
    ViewBag.Title = "PromotedEmployee";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<script src="~/AppJs/PromotedEmployeeList.js"></script>
<div class="panel panel-primary" style="margin-bottom: 20px;">
    <div class="panel panel-heading">Promoted Employee List</div>
    <div class="panel panel-body">
        <div class="row">
            <div class="col-md-12">
                <form role="form" class="form-horizontal">
                    <div class="row" style="padding-left: 16px;">
                        <div class="col-md-12" >
                            <div class="form-group row">
                                <label style="text-align: center" class="col-md-1"> Financial Year</label>
                                <div class="col-md-2">
                                    <select disabled="disabled" class="form-control promoted" id="ddlFinalcialYear">
                                        <option value=""></option>
                                    </select>

                                </div>
                                <label style="text-align: center" class="col-md-1"> Month</label>
                                <div class="col-md-1">
                                    <select class="form-control promoted" id="ddlFinalcialMonth">
                                        <option value=""></option>
                                    </select>

                                </div>
                                <label style="text-align: center" class="col-md-1"> Category</label>
                                <div class="col-md-1">
                                    <select class="form-control promoted" id="ddlCategory">
                                        <option value="1">Staff</option>
                                        <option value="2">Worker</option>
                                    </select>

                                </div>
                                <label style="text-align: center" class="col-md-1"> Unit Name</label>
                                <div class="col-md-4">
                                    <select class="form-control promoted col-md-4" id="ddlUnitName">
                                        <option value=""></option>
                                    </select>

                                </div>
                            </div>
                           
                        </div>
                       
                    </div>
                </form>
            </div>
        </div>
        <div class="form-group">
            <div id="printSection">
                <table class="table table-bordered tblHeader tblbody" id="gvPromotedEmployee" style="overflow-x: scroll; overflow-y: hidden; text-align: center">
                    <thead class="tblHeader">
                        <tr>
                            <th>SL</th>
                            <th>Unit Name</th>
                            <th>Name</th>
                            <th>Department</th>
                            <th>Section</th>
                            <th>Previous Designation</th>
                            <th>Promoted Designation</th>
                            <th>Photo</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
                
            </div>

        </div>

    </div>

</div>